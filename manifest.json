{
    "manifest_version": 3,
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "1.5.0",
    "default_locale": "zh_TW",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "__MSG_extName__"
    },
    "permissions": ["tabs", "tabGroups", "storage", "system.display"],
    "web_accessible_resources": [
        {
            "resources": ["lazy.html","lazy.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
