{
  "manifest_version": 3,
  "name": "Tab Session Lite",
  "description": "極致輕量、速度優先的分頁 Session 管理工具。Instant Save, Local Only.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Tab Session Lite"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ]
}
